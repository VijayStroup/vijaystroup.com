---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

export interface Props {
  title: string
  markdown?: boolean
}

const { title, markdown } = Astro.props.frontmatter || Astro.props
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='mx-[5%] md:mx-[15%] lg:mx-[20%] min-h-screen flex flex-col'>
    <Header />
    <main class={`mt-8 ${markdown ? 'prose' : ''}`}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
